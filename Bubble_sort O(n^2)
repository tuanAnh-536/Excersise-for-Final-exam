#include<iostream>
using namespace std;
void bubble_sort(int*arr,int n){
    for(int i=0;i<n-1;i++){
        for(int j=0;j<n-1-i;j++){
            if(*(arr+j)>*(arr+j+1)){
                int temp=*(arr+j);
                *(arr+j)=*(arr+j+1);
                *(arr+j+1)=temp;
            }
        }
    }
}
int main(){
    int n;
    cout<<"Hay nhap n: ";
    int*a=new int[n];
    cin>>n;
    for(int i=0;i<n;i++){
        cout<<"\nHay nhap phan tu thu "<<i+1<<endl ;
        cin>>a[i];
    }
    bubble_sort(a,n);
    cout<<"Mang sau khi sap xep la: "<<endl;
    for(int i=0;i<n;i++)
    {cout<<a[i]<<" "<<endl;}
}
