#include <iostream>
#include <cmath>
using namespace std;

// Hàm kiểm tra số nguyên tố
bool isPrime(int n) {
    if (n < 2) {
        return false;  // Các số nhỏ hơn 2 không phải số nguyên tố
    }
    for (int i = 2; i <= sqrt(n); i++) {
        if (n % i == 0) {
            return false;  // Nếu n chia hết cho bất kỳ số nào thì không phải số nguyên tố
        }
    }
    return true;  // Nếu không có ước thì n là số nguyên tố
}

// Hàm kiểm tra và in ra số nguyên tố trong mảng
void CheckPrimeInArray(int* arr, int n) {
    for (int i = 0; i < n; i++) {
        if (isPrime(arr[i])) {
            cout << arr[i] << " la so nguyen to" << endl;
        } else {
            cout << arr[i] << " khong phai so nguyen to" << endl;
        }
    }
}

int main() {
    int n;
    cout << "Nhap so phan tu cua mang: ";
    cin >> n;

    int* a = new int[n];  // Cấp phát động mảng
    cout << "Nhap cac phan tu cua mang:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }

    CheckPrimeInArray(a, n);  // Kiểm tra số nguyên tố trong mảng

    delete[] a;  // Giải phóng bộ nhớ
    return 0;
}
